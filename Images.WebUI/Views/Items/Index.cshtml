@model IEnumerable<Images.Domain.Table>

@{
    ViewBag.Title = "Index";
}

<h2>Items</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Name)
        </div>
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Category)
        </div>
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Price)
        </div>
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Image)
        </div>
        <hr />
    </div>
</div>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-2">
            @Html.DisplayFor(modelItem => item.Name)
        </div>
        <div class="col-md-2">
            <img src="~/pictures/@Html.DisplayFor(modelItem => item.Category)" width="75" height="75" />
        </div>
        <div class="col-md-2">
            @Html.DisplayFor(modelItem => item.Price)
        </div>
        <div class="col-md-2">
            <img src="~/pictures/@Html.DisplayFor(modelItem => item.Image)" width="75" height="75" />
        </div>
        <div class="col-md-2">
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </div>

    </div>
}